{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "lib": [
      "esnext"
    ],
    "module": "commonjs",
    "noEmit": false,
    "noImplicitAny": true,
    "isolatedModules": false,
    "outDir": "../public",
    "resolveJsonModule": true,
    "typeRoots": [
      "../node_modules/@types/",
      "./types/"
    ],
  },
  "include": [
    "**/*",
    "locales/**/*.json"
  ]
}