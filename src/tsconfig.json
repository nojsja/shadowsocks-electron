{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": ["../*"],
      "@common/*": ["common/*"],
      "@main/*": ["main/*"],
      "@renderer/*": ["renderer/*"]
    },
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false
  }
}
